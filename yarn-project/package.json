{
  "name": "@aztec/aztec3-packages",
  "packageManager": "yarn@3.4.1",
  "private": true,
  "scripts": {
    "docs": "typedoc --out docs/dist && cd docs && yarn serve",
    "formatting": "yarn workspaces foreach run formatting",
    "formatting:fix": "yarn workspaces foreach run formatting:fix"
  },
  "workspaces": [
    "acir-simulator",
    "archiver",
    "aztec-cli",
    "aztec-rpc",
    "aztec.js",
    "circuits.js",
    "docs",
    "end-to-end",
    "ethereum.js",
    "ethereum.js/example",
    "foundation",
    "kernel-prover",
    "key-store",
    "merkle-tree",
    "noir-contracts",
    "l1-contracts",
    "p2p",
    "prover-client",
    "aztec-node",
    "sequencer-client",
    "world-state",
    ".yalc/*/*"
  ],
  "prettier": "@aztec/foundation/prettier",
  "devDependencies": {
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.26",
    "typescript": "^4.9.5"
  },
  "comments": {
    "resolutions": "Yarn has a bug where it does not load resolutions from packages in a workspace, so those need to be hoisted here. See https://github.com/yarnpkg/yarn/issues/5039."
  }
}

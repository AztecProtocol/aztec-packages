{
  "name": "@aztec/l1-contracts",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./dest/index.js",
    "./viem": "./dest/viem-abis/index.js"
  },
  "typedoc": {
    "entryPoint": "./src/index.ts",
    "displayName": "L1 Contracts",
    "tsconfig": "./tsconfig.dest.json"
  },
  "scripts": {
    "build": "yarn clean && tsc -b tsconfig.dest.json",
    "build:dev": "tsc -b tsconfig.dest.json --watch",
    "generate": "contract_gen_def && bash scripts/update-viem-abis.sh && yarn formatting:fix",
    "clean": "rm -rf ./dest .tsbuildinfo",
    "formatting": "run -T prettier --check ./src && run -T eslint --max-warnings 0 ./src",
    "formatting:fix": "run -T prettier -w ./src",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --no-cache --passWithNoTests"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/foundation": "workspace:^",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@aztec/ethereum.js": "workspace:^",
    "@jest/globals": "^29.4.3",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.7.23",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}

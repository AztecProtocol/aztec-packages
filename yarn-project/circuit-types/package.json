{
  "name": "@aztec/circuit-types",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./dest/index.js",
    "./stats": "./dest/stats/index.js",
    "./jest": "./dest/jest/index.js",
    "./interfaces": "./dest/interfaces/index.js",
    "./log_id": "./dest/logs/log_id.js",
    "./test": "./dest/test/index.js",
    "./tx_hash": "./dest/tx/tx_hash.js"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/index.ts"
    ],
    "name": "Aztec 3 Circuit Types",
    "tsconfig": "./tsconfig.json"
  },
  "scripts": {
    "build": "yarn clean && yarn generate && tsc -b",
    "build:dev": "tsc -b --watch",
    "clean": "rm -rf ./dest .tsbuildinfo ./src/test/artifacts",
    "formatting": "run -T prettier --check ./src && run -T eslint ./src",
    "formatting:fix": "run -T eslint --fix ./src && run -T prettier -w ./src",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules ../node_modules/.bin/jest --passWithNoTests",
    "generate": "./scripts/copy-test-artifacts.sh && run -T prettier -w ./src/test/artifacts --loglevel warn"
  },
  "inherits": [
    "../package.common.json",
    "./package.local.json"
  ],
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.[cm]?js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.(js|mjs|ts)$",
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "decorators": true
            },
            "transform": {
              "decoratorVersion": "2022-03"
            }
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "reporters": [
      [
        "default",
        {
          "summaryThreshold": 9999
        }
      ]
    ]
  },
  "dependencies": {
    "@aztec/circuits.js": "workspace:^",
    "@aztec/ethereum": "workspace:^",
    "@aztec/foundation": "workspace:^",
    "@aztec/types": "workspace:^",
    "browserify-cipher": "^1.0.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "lodash.times": "^4.3.2",
    "tslib": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/lodash.isequal": "^4.5.6",
    "@types/lodash.omit": "^4.5.9",
    "@types/lodash.times": "^4.3.7",
    "@types/node": "^18.7.23",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "lodash.omit": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "viem": "^2.7.15"
  },
  "files": [
    "dest",
    "src",
    "!*.test.*"
  ],
  "types": "./dest/index.d.ts",
  "engines": {
    "node": ">=18"
  }
}

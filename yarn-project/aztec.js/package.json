{
  "name": "@aztec/aztec.js",
  "homepage": "https://github.com/AztecProtocol/aztec-packages/tree/master/yarn-project/aztec.js",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "browser": "./dest/browser/index.js",
      "default": "./dest/node/index.js"
    },
    "./interfaces/pxe": {
      "browser": "./dest/browser/interfaces/pxe.js",
      "default": "./dest/node/api/interfaces/pxe.js"
    },
    "./abi": {
      "browser": "./dest/browser/abi.js",
      "default": "./dest/node/api/abi.js"
    },
    "./account": {
      "browser": "./dest/browser/account.js",
      "default": "./dest/node/api/account.js"
    },
    "./addresses": {
      "browser": "./dest/browser/addresses.js",
      "default": "./dest/node/api/addresses.js"
    },
    "./cheatcodes": {
      "browser": "./dest/browser/api/cheatcodes.js",
      "default": "./dest/node/api/cheatcodes.js"
    },
    "./contracts": {
      "browser": "./dest/browser/contracts.js",
      "default": "./dest/node/contract/index.js"
    },
    "./deployment": {
      "browser": "./dest/browser/deployment.js",
      "default": "./dest/node/api/deployment.js"
    },
    "./entrypoint": {
      "browser": "./dest/browser/entrypoint.js",
      "default": "./dest/node/api/entrypoint.js"
    },
    "./eth_address": {
      "browser": "./dest/browser/eth_address.js",
      "default": "./dest/node/api/eth_address.js"
    },
    "./ethereum": {
      "browser": "./dest/browser/ethereum.js",
      "default": "./dest/node/api/ethereum/index.js"
    },
    "./fee": {
      "browser": "./dest/browser/fee.js",
      "default": "./dest/node/api/fee.js"
    },
    "./fields": {
      "browser": "./dest/browser/fields.js",
      "default": "./dest/node/api/fields.js"
    },
    "./log_id": {
      "browser": "./dest/browser/log_id.js",
      "default": "./dest/node/api/log_id.js"
    },
    "./rpc": {
      "browser": "./dest/browser/rpc.js",
      "default": "./dest/node/rpc_clients/index.js"
    },
    "./tx_hash": {
      "browser": "./dest/browser/tx_hash.js",
      "default": "./dest/node/api/tx_hash.js"
    },
    "./wallet": {
      "browser": "./dest/browser/wallet.js",
      "default": "./dest/node/api/wallet.js"
    },
    "./utils": {
      "browser": "./dest/browser/utils.js",
      "default": "./dest/node/utils/index.js"
    }
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/node/index.ts"
    ],
    "name": "Aztec.js",
    "tsconfig": "./tsconfig.json"
  },
  "scripts": {
    "build": "yarn clean && tsc -b && webpack",
    "build:web": "webpack",
    "build:dev": "tsc -b --watch",
    "build:ts": "tsc -b",
    "clean": "rm -rf ./dest .tsbuildinfo ./src/account_contract/artifacts",
    "formatting": "run -T prettier --check ./src && run -T eslint ./src",
    "formatting:fix": "run -T eslint --fix ./src && run -T prettier -w ./src",
    "test": "HARDWARE_CONCURRENCY=${HARDWARE_CONCURRENCY:-16} RAYON_NUM_THREADS=${RAYON_NUM_THREADS:-4} NODE_NO_WARNINGS=1 node --experimental-vm-modules ../node_modules/.bin/jest --passWithNoTests --maxWorkers=${JEST_MAX_WORKERS:-8}"
  },
  "inherits": [
    "../package.common.json",
    "./package.local.json"
  ],
  "jest": {
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.[cm]?js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.(js|mjs|ts)$",
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "decorators": true
            },
            "transform": {
              "decoratorVersion": "2022-03"
            }
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "reporters": [
      "default"
    ],
    "testTimeout": 30000,
    "setupFiles": [
      "../../foundation/src/jest/setup.mjs"
    ]
  },
  "dependencies": {
    "@aztec/circuit-types": "workspace:^",
    "@aztec/circuits.js": "workspace:^",
    "@aztec/ethereum": "workspace:^",
    "@aztec/foundation": "workspace:^",
    "@aztec/l1-artifacts": "workspace:^",
    "@aztec/protocol-contracts": "workspace:^",
    "@aztec/types": "workspace:^",
    "axios": "^1.7.2",
    "tslib": "^2.4.0",
    "viem": "2.22.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.7.23",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^12.0.2",
    "crypto-browserify": "^3.12.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.3",
    "process": "^0.11.10",
    "resolve-typescript-plugin": "^2.0.1",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "util": "^0.12.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "files": [
    "dest",
    "src",
    "!*.test.*"
  ],
  "types": "./dest/index.d.ts",
  "engines": {
    "node": ">=18"
  }
}

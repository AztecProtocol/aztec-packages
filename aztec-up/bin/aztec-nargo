#!/usr/bin/env bash
set -euo pipefail

export SKIP_NET=1
export PATH=$PATH:$HOME/bin

if [ "${1:-}" == "lsp" ]; then
	docker run -i -v $HOME:$HOME -e HOME=$HOME aztecprotocol/noir $@
elif [ "${1:-}" == "compile" ]; then
	$(dirname $0)/.aztec-run aztecprotocol/avm-transpiler /usr/src/avm-transpiler/scripts/compile_then_transpile.sh $@
else
	$(dirname $0)/.aztec-run aztecprotocol/noir $@
fi

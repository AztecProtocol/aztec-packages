#!/usr/bin/env bash
set -euo pipefail

if [[ $PWD != ${HOME}* ]]; then
  echo "Due to how we containerize our applications, we require your working directory to be somewhere within $HOME."
  exit 1
fi

if [ -t 0 ]; then
  if [ -t 1 ]; then
    args="-ti"
  else
    args="-i"
  fi
fi

docker run ${args:-} \
  -v $HOME:$HOME \
  -e HOME=$HOME \
  --workdir="$PWD" \
  --entrypoint /usr/src/aztec-nargo/compile_then_postprocess.sh \
  aztecprotocol/aztec "$@"

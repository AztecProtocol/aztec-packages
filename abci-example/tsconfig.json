{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  }
}

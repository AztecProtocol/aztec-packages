{
  "files.associations": {
    // Build and Infrastructure
    "*.tf": "terraform",
    "*.tfvars": "terraform",
    "Makefile.*": "makefile",
    
    // C++ Standard Library Containers
    "array": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "hash_map": "cpp",
    "hash_set": "cpp",
    "list": "cpp",
    "map": "cpp",
    "queue": "cpp",
    "set": "cpp",
    "stack": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    
    // C++ Standard Library Components
    "algorithm": "cpp",
    "atomic": "cpp",
    "bitset": "cpp",
    "chrono": "cpp",
    "complex": "cpp",
    "functional": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "optional": "cpp",
    "ratio": "cpp",
    "regex": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "variant": "cpp",
    
    // I/O and Streams
    "fstream": "cpp",
    "iomanip": "cpp",
    "ios": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "ostream": "cpp",
    "sstream": "cpp",
    "streambuf": "cpp",
    "strstream": "cpp",

    // System and Threading
    "condition_variable": "cpp",
    "filesystem": "cpp",
    "mutex": "cpp",
    "semaphore": "cpp",
    "shared_mutex": "cpp",
    "thread": "cpp",
    
    // C Standard Library
    "cctype": "cpp",
    "cfenv": "cpp",
    "cinttypes": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cuchar": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    
    // Implementation Details
    "__bit_reference": "cpp",
    "__bits": "cpp",
    "__config": "cpp",
    "__debug": "cpp",
    "__errc": "cpp",
    "__functional_base": "cpp",
    "__hash": "cpp",
    "__hash_table": "cpp",
    "__locale": "cpp",
    "__memory": "cpp",
    "__mutex_base": "cpp",
    "__node_handle": "cpp",
    "__nullptr": "cpp",
    "__split_buffer": "cpp",
    "__string": "cpp",
    "__threading_support": "cpp",
    "__tree": "cpp",
    "__tuple": "cpp",
    
    // Modern C++ Features
    "bit": "cpp",
    "charconv": "cpp",
    "codecvt": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "exception": "cpp",
    "initializer_list": "cpp",
    "limits": "cpp",
    "locale": "cpp",
    "new": "cpp",
    "numeric": "cpp",
    "random": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stop_token": "cpp",
    "system_error": "cpp",
    "typeindex": "cpp",
    "typeinfo": "cpp",
    "version": "cpp",
    
    // Project Specific
    "*.inc": "cpp",
    "*.macros": "cpp",
    "*.tcc": "cpp"
  },

  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/msgpack-c/**": true
  },

  "solidity.compileUsingRemoteVersion": "v0.6.10+commit.00c0fcaf",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "cmake.sourceDirectory": "${workspaceFolder}/cpp"
}

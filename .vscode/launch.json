  "version": "0.2.0",
  "configurations": [
    {
      "address": "${config:mainframeAddress}",
      "port": 9221,
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    },
    {
      "name": "Attach to running lldb",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "stopOnEntry": true
  }
  ]
}
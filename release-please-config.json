{
    "release-type": "simple",
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": true,
    "prerelease": true,
    "pull-request-title-pattern": "chore(aztec-sandbox): Release ${version}",
    "group-pull-request-title-pattern": "chore(aztec-sandbox): Release ${version}",
    "packages": {
      ".": {
        "release-type": "simple",
        "component": "aztec-sandbox",
        "include-component-in-tag": false,
        "extra-files": [
          {
            "type": "json",
            "path": "yarn-project/aztec-sandbox/package.json",
            "jsonpath": "$.version"
          }
        ]
      }
    }
  }
  
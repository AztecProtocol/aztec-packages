{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "prerelease": true,
  "prerelease-type": "staging",
  "group-pull-request-title-pattern": "chore(staging): Release ${version}",
  "pull-request-header": ":robot: I have created a new Aztec Packages release",
  "versioning": "default",
  "include-component-in-tag": false,
  "changelog-sections": [
    { "type": "feat", "section": "Features", "hidden": false },
    { "type": "fix", "section": "Bug Fixes", "hidden": false },
    { "type": "chore", "section": "Miscellaneous", "hidden": false },
    { "type": "test", "section": "Miscellaneous", "hidden": false },
    { "type": "refactor", "section": "Miscellaneous", "hidden": false },
    { "type": "docs", "section": "Documentation", "hidden": false }
  ],
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "."
    },
    "yarn-project": {
      "release-type": "node",
      "package-name": "yarn-project"
    }
  }
}

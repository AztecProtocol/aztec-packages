    pol commit alu_u64;
    pol commit alu_u128;

    // 8-bit slice registers
    pol commit alu_s1;
    pol commit alu_s2;
    pol commit alu_s3;
    pol commit alu_s4;
    pol commit alu_s5;
    pol commit alu_s6;

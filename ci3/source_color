# Color codes for output.

export yellow="\033[93m"
export blue="\033[34m"
export green="\033[32m"
export red="\033[31m"
export purple="\033[35m"
export bold="\033[1m"
export reset="\033[0m"

# OSC 8 support for links.
link_open='\033]8;;'
link_close='\x07'

# We always want color.
export FORCE_COLOR=true
